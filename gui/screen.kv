			multiline:False
			readonly: False
			focus:True
		Button:
			size_hint_x: .2
			text: 'Enter'
			on_press : root.get_weather()
	GridLayout:
		rows : 5
		cols : 3
		padding: 40,70,40,80
		spacing: 5
		Label:
			id: loc
			text:
