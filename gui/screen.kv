ScreenManager:
    StartScreen:
	SelectScreen:
    WeatherScreen:
	WikiSearchScreen:
	NewsScreen:
	CodingScreen:
    EndScreen:
<StartScreen>:
	GridLayout:
		Label:
			background_color: 0, 0, 0, 0
			Image:
				source: 'icons/icon.png'
				y: self.parent.y + self.parent.height - 200
				x: self.parent.width - 200
				size: 1000,1000
				allow_stretch: True
		

	GridLayout:
		Button:
			on_press: app.root.current = 'select_screen'
			background_normal:  "icons/start.png"
        	background_down:    "icons/start.png"
			size: 400, 300
			y: self.parent.y + self.parent.height -650
			x: self.parent.width - 590
			

				
<SelectScreen>:
	name: 'select_screen'
	GridLayout:
		padding: 0,0,0,540
		rows:1
		Button:
			id : nav
			text:"Welcome to Adjutor"
	GridLayout:
		padding: 10,80,10,10
		rows:2
		cols:2
		spacing: 10
		Button:
			text: 'News'
			on_press:
				app.root.transition.direction = 'left' 
				app.root.current = 'news_screen'
		Button:
			text:'Wiki Search'
			#background_normal:  "weather.gif"
        	#background_down:    "start.png"
			on_press: 
				app.root.transition.direction = 'left' 
				app.root.current = 'wiki_screen'
			background: 0, 0, 0, 0
		Button:
			text:'Coding Calender'
			on_press:
				app.root.transition.direction = 'left'  
				app.root.current = 'coding_screen'
			#background_color: 0, 0, 0, 0
		Button:
			text: "Weather"
			#background_normal:  "icons/weather.png"
			on_press:
				app.root.transition.direction = 'left'  
				app.root.current = 'weather_screen'

<NewsScreen>:
	name: 'news_screen'
	GridLayout:
		cols: 2
		rows: 1
		padding : 0,0,0,60
		GridLayout:
			cols:1
			padding : 0,10,0,0
			spacing :5
			TextInput:
				id : newsq
				size_hint_y : 0.25
				width : 20
				hint_text: 'News Search'
				multiline:False
				readonly: False
				focus:True
			Button:
				text: "Enter"
				size_hint_y : None
				size_hint_x : None
				width: 70
				height: 30
				pos_hint: {'center_x': 10, 'center_y': 10}
				
			
			Button: 
				id: btn
				text: 'Category'
				on_release: dropdown.open(self)
				size_hint_y: None
				height: '48dp'
			Widget:
				on_parent: dropdown.dismiss()
			DropDown:
				id: dropdown
				on_select: btn.text = 'Selected value: {}'.format(args[1])
				Button:
					text: 'Value A'
					size_hint_y: None
					height: '48dp'
					#on_release: dropdown.select('A')

				Button:
					text: 'Value B'
					size_hint_y: None
					height: '48dp'
					#on_release: dropdown.select('B')

				Button:
					text: 'Value C'
					size_hint_y: None
					height: '48dp'
					#on_release: dropdown.select('C')
			Button:
				text:
			Button:
				text:

		Button:
			size_hint_x: 1.7
			text:
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			Button:
				on_press: 
					app.root.transition.direction = 'right'
					app.root.current = 'select_screen'
				text: "Back"
			Button:
				on_press: app.root.current = 'end_screen'
				text: "Exit"
<WikiSearchScreen>:
	name: 'wiki_screen'
	GridLayout:
		rows:1
		cols:2
		padding:50,20,50,550
		TextInput:
			id: wiki
			hint_text: 'Search'
			multiline:False
			readonly: False
			focus:True
		Button:
			size_hint_x: .2
			text: 'Enter'
			on_press : root.get_wiki()
	GridLayout:
		cols:1
		rows:1
		padding: 10,70,10,70
		ScrollView:
			#size_hint_y: .9
			Label:
				id: wikiResult
				font_size: 16
				text_size: self.width, None
				size_hint_y: None
				height: self.texture_size[1]
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			Button:
				on_press: 
					app.root.transition.direction = 'right'
					app.root.current = 'select_screen'
				text: "Back"
			Button:
				on_press: app.root.current = 'end_screen'
				text: "Exit"
<CodingScreen>:
	name: 'coding_screen'
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			Button:
				on_press: 
					app.root.transition.direction = 'right'
					app.root.current = 'select_screen'
				text: "Back"
			Button:
				on_press: app.root.current = 'end_screen'
				text: "Exit"
<WeatherScreen>:
	name: 'weather_screen'
	GridLayout:
		rows:1
		cols:2
		padding:50,20,50,550
		TextInput:
			id: city
			hint_text: 'City Name'
			on_text: root.suggestor(self.text)
			multiline:False
			readonly: False
			focus:True
		Button:
			size_hint_x: .2
			text: 'Enter'
			on_press : root.get_weather()
	GridLayout:
		rows : 5
		cols : 3
		padding: 40,70,40,80
		spacing: 5
		Label:
			id: loc
			text:
		Label:
			size_hint_y: 3
			Image:
				id: weather_pic
				source: 'img/01d.png' 
				y: self.parent.y + .1* self.parent.y
				x: self.parent.x + .26* self.parent.x
		Label:
			text:
		Button:
			text: 'Max Temperature'
		Button:
			text: 'Min Temperature'
		Button:
			text: 'Weather Status'
		Label:
			id: temp_max
			text:
		Label:
			id: temp_min
			text:
		Label:
			id : status
			text:
		Button:
			text: 'Wind'
		Label:
			id : wind
			text:
		Label:
			text: 
		Button:
			text:'Humidity'
		Label:
			id: humidity
			text: 
		Label:
			text:
	
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			Button:
				on_press: 
					app.root.transition.direction = 'right'
					app.root.current = 'select_screen'
				text: "Back"
			Button:
				on_press: app.root.current = 'end_screen'
				text: "Exit"
<EndScreen>:
	name: 'end_screen'
	GridLayout:
		rows:3
		cols:3
		padding: 0,100,0,170
		Label:
			text:
		Label:
			text:
		Label:
			text:
		Label:
			text:
		Button:
			background_color: 0, 0, 0, 0
			Image:
				source: 'thanks.png'
				y: self.parent.y + self.parent.height - 100
				x: self.parent.width/2.0 + 15
				size: 250, 250
				allow_stretch: True
		Label:
			text:
		Label:
			text:
		Label:
			text:
		Label:
			text:
    AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			Button:
				on_press: app.stop()
				text: "Exit"

#### Reference ####
<VideoScreen>:
    name: 'video_screen'
	BoxLayout:
        AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'
			BoxLayout:
				orientation: 'horizontal'
				size_hint_y: None
				size_hint_x: 1
				Label:
					id:toolbartext1
					size: self.width, self.height / 2.5
					markup: True
					size : self.texture_size
                    text: "[size=40][color=33ff33][b]Video Downloader[/b][/color][/size]"
					bcolor: 1, 0, 0 ,0.5
					canvas.before:
						Color:
							rgba: self.bcolor
						Rectangle:
							pos:self.pos
							size:self.size
							#pos: 0,self.center_y+10
							#size: self.width, self.height / 2.5
							#radius: [50,] 
			GridLayout:
				rows:1
				padding:50,150,50,420
				TextInput:
					id: vidtxt
					hint_text: 'Enter URL'
					multiline:False
					focus:True
				#Button:
				#	id: urlpush1
				#	size_hint_x: 0.40 
				#	text:"Download"
				#	on_press : root.download()
			GridLayout:
				rows:2
				padding:50,280,50,200
				Button:
					text:'Audio'
					on_press : root.downloadAudio()
				Button:
					text:'360'
					on_press : root.download360()
				Button:
					text:'480'
					on_press : root.download480()
				Button:
					text:'720'
					on_press : root.download720()
			GridLayout:
				rows:2	
				padding:50,400,50,150
				Button:
					text:'1080'
					on_press : root.download1080()
				
			AnchorLayout:
				anchor_x: 'center'
				anchor_y: 'bottom'
				BoxLayout:
					orientation: 'horizontal'
					size_hint: 1, .1
					Button:
						on_press: app.root.current = 'select_screen'
						text: "Back"
					Button:
						on_press: app.root.current = 'second_screen'
						text: "Exit"
