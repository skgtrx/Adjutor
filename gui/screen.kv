<StartScreen>:
	GridLayout:
		Label:
			background_color: 0, 0, 0, 0
			Image:
				source: 'icons/icon.png'
				y: self.parent.y + self.parent.height - 200
				x: self.parent.width - 200
				size: 1000,1000
				allow_stretch: True
		

	GridLayout:
		Button:
			on_press: app.root.current = 'select_screen'
			background_normal:  "icons/start.png"
        	background_down:    "icons/start.png"
			size: 400, 300
			y: self.parent.y + self.parent.height -650
			x: self.parent.width - 590
			

				
<SelectScreen>:
	name: 'select_screen'
	GridLayout:
		padding: 0,0,0,540
		rows:1
		Button:
			id : nav
			markup: True
			text: "[size=20][color=ADFF2F][b]Welcome to Adjutor[/b][/color][/size]"
			#text:"Welcome to Adjutor"
	GridLayout:
		padding: 10,80,10,10
		rows:2
		cols:2
		spacing: 10
		Button:
			text: 'News'
			on_press:
				app.root.transition.direction = 'left' 
				app.root.current = 'news_screen'
		Button:
			text: "Weather"
			#background_normal:  "icons/weather.png"
			on_press:
				app.root.transition.direction = 'left'  
				app.root.current = 'weather_screen'
		Button:
			text:'Wiki Search'
			#background_normal:  "weather.gif"
        	#background_down:    "start.png"
			on_press: 
				app.root.transition.direction = 'left' 
				app.root.current = 'wiki_screen'
			background: 0, 0, 0, 0
		Button:
			text:'Coding Calender'
			on_press:
				app.root.transition.direction = 'left'  
				app.root.current = 'coding_screen'
			#background_color: 0, 0, 0, 0
		

<NewsScreen>:
	name: 'news_screen'
	GridLayout:
		padding: 10,10,10,70
		rows:2
		cols:2
		spacing: 10
