			on_press:
				app.root.transition.direction = 'left'  
				app.root.current = 'adjutor_exclusive'
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			orientation: 'horizontal'
			size_hint: 1, .1
			Button:
				on_press: 
					app.root.transition.direction = 'right'
					app.root.current = 'select_screen'
